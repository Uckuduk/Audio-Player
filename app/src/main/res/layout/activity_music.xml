<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MusicActivity">

    <ImageView
            android:id="@+id/im_songImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"/>

    <TextView
            android:id="@+id/tv_music_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="200dp"/>

    <TextView
            android:id="@+id/tv_music_Artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="150dp"/>

    <ImageButton
            android:id="@+id/ma_b_previous"
            android:layout_width="78dp"
            android:layout_height="64dp"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="80dp"
            android:layout_marginStart="50dp"
            android:src="@drawable/ic_baseline_skip_previous_24"/>

    <ImageButton
            android:id="@+id/ma_b_play_pause"
            android:layout_width="78dp"
            android:layout_height="64dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="80dp"
            android:src="@drawable/ic_baseline_pause_24"/>

    <ImageButton
            android:id="@+id/ma_b_favourite"
            android:layout_width="78dp"
            android:layout_height="64dp"
            android:layout_gravity="bottom|right"
            android:background="@null"
            android:layout_marginBottom="170dp"
            android:src="@drawable/ic_baseline_favorite_green_24"/>

    <ImageButton
            android:id="@+id/ma_b_next"
            android:layout_width="78dp"
            android:layout_height="64dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="80dp"
            android:layout_marginEnd="50dp"
            android:src="@drawable/ic_baseline_skip_next_24"/>
</FrameLayout>