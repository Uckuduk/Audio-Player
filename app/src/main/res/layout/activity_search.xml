<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SearchActivity">

    <EditText
            android:id="@+id/et_searchLine"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="@string/et_text"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_searchSongs"
            android:layout_marginTop="70dp"
            android:layout_width="match_parent"
            android:layout_height="480dp">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
            android:id="@+id/l_searchSong"
            android:descendantFocusability="afterDescendants"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_marginBottom="70dp"
            android:clickable="true">

        <TextView
                android:id="@+id/tv_searchArtistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_marginStart="100dp"
                android:textSize="20sp"/>

        <TextView
                android:id="@+id/tv_searchSongName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginStart="100dp"
                android:textSize="20sp"/>

    </LinearLayout>

    <ImageButton
            android:id="@+id/sa_b_playButton"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="72dp"
            android:clickable="true"
            android:src="@drawable/ic_baseline_pause_24"/>

    <ImageButton
            android:id="@+id/sa_b_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_baseline_search_24"/>


</FrameLayout>